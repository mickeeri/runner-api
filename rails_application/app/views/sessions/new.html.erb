<% provide(:title, "Logga in") %>
<h1>Logga in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit "Logga in", class: "btn btn-primary" %>

    <% end %>
    <div class="row">
      Ny anv√§ndare? <%= link_to "Registera dig nu!", signup_path %>
    </div>
  </div>
</div>
