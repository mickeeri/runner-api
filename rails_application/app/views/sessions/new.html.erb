<% provide(:title, "Logga in") %>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Logga in</h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email, "E-post" %>
        <%= f.email_field :email, class: 'form-ctrl' %>
      </div>

      <div class="form-group">
        <%= f.label :password, "LÃ¶senord" %>
        <%= f.password_field :password, class: 'form-ctrl' %>
      </div>

      <%= f.submit "Logga in", class: "btn btn-primary submit" %>

    <% end %>

  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 new-user">
    <p class="row">Inget konto? <%= link_to "Registera dig nu!", signup_path %></p>
  </div>
</div>
