<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name, "Namn" %>
    <%= f.text_field :name, class: 'form-ctrl' %>
  </div>

	<div class="form-group">
    <%= f.label :email, "E-post" %>
    <%= f.email_field :email, class: 'form-ctrl' %>
  </div>

		<div class="form-group">
    <%= f.label :password, "Lösenord" %>
    <%= f.password_field :password, class: 'form-ctrl' %>
  </div>

	<div class="form-group">
    <%= f.label :password_confirmation, "Upprepa lösenord" %>
    <%= f.password_field :password_confirmation, class: 'form-ctrl' %>
  </div>

	<div class="form-group">
  	<%= f.submit yield(:button_text), class: "btn btn-primary submit" %>
  </div>
<% end %>
